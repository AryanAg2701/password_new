{
    "name": "Node Express Mongo Auth",
    "version": "1.0",
    "manifest_version": 3,
    "description": "A Chrome extension for Node Express Mongo Auth",
    "icons": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    },
    "background": {
      "service_worker": "background.js"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["popup.js"]
      }
    ],
    "permissions": ["activeTab"],
    "host_permissions": ["<all_urls>"]
  }
  